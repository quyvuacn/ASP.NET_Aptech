@model ShopASP.Models.Category

<tr>
	<td class="table-column-pe-0">
		<div class="form-check">
			<input type="checkbox"
				   class="form-check-input"
				   id="usersDataCheck1" />
			<label class="form-check-label"
				   for="usersDataCheck1"></label>
		</div>
	</td>
	<td>
		@Model.Name
	</td>
	<td>@Model.CreatedDate</td>
	<td>@Model.UpdatedDate</td>
	<td >
		<form asp-action="Delete">
			<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-white text-primary">
				<i class="bi-pencil-fill me-1"></i>
				Edit
			</a>
			<input type="hidden" asp-for="Id" />
			<button 
				class="btn btn-sm btn-white text-danger"
					onclick="confirm('Confirm deletion of this record?') ? this.form.submit() : ''">
				<i class="bi-pencil-fill me-1"></i>
				Delete
			</button>
		</form>
	</td>
</tr>