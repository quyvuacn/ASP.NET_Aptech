@using ShopASP.Extensions
@model ShopASP.Areas.Admin.Models.UserViewModel

@{
	ViewData["Title"] = "Create";
	var levels =new USER_LEVEL();
}
<div id="create-user" class="content container-fluid">
	<!-- Step Form -->
	<form enctype="multipart/form-data"
		method="post" asp-action="Create"
		class="js-step-form py-md-5"
		data-hs-step-form-options='{
            "progressSelector": "#addUserStepFormProgress",
            "stepsSelector": "#addUserStepFormContent",
            "isValidate": false
        }'>
		<div class="row justify-content-lg-center">
			<div class="col-lg-8">
				<!-- Step -->
				<ul id="addUserStepFormProgress"
					class="js-step-progress step step-sm step-icon-sm step step-inline step-item-between mb-3 mb-md-5">
					<li class="step-item">
						<a class="step-content-wrapper"
						   href="javascript:;"
						   data-hs-step-form-next-options='{
                    "targetSelector": "#addUserStepProfile"
                  }'>
							<span class="step-icon step-icon-soft-dark">1</span>
							<div class="step-content">
								<span class="step-title">Profile</span>
							</div>
						</a>
					</li>

					<li class="step-item">
						<a class="step-content-wrapper"
						   href="javascript:;"
						   data-hs-step-form-next-options='{
                    "targetSelector": "#addUserStepBillingAddress"
                  }'>
							<span class="step-icon step-icon-soft-dark">2</span>
							<div class="step-content">
								<span class="step-title">Billing address</span>
							</div>
						</a>
					</li>

					<li class="step-item">
						<a class="step-content-wrapper"
						   href="javascript:;"
						   data-hs-step-form-next-options='{
                    "targetSelector": "#addUserStepConfirmation"
                  }'>
							<span class="step-icon step-icon-soft-dark">3</span>
							<div class="step-content">
								<span class="step-title">Confirmation</span>
							</div>
						</a>
					</li>
				</ul>
				<!-- End Step -->
				<!-- Content Step Form -->
				<div id="addUserStepFormContent">
					<!-- Card -->
					<div id="addUserStepProfile"
						 class="card card-lg active">
						<!-- Body -->
						<div class="card-body">
							<!-- Form -->
							<div class="row mb-4">
								<label class="col-sm-3 col-form-label form-label">Avatar</label>

								<div class="col-sm-9">
									<div class="d-flex align-items-center">
										<!-- Avatar -->
										<label class="avatar avatar-xl avatar-circle avatar-uploader me-5"
											   for="avatarUploader">
											<img id="avatarImg"
												 class="avatar-img"
												 src="admin	/img/160x160/img1.jpg"
												 alt="Image Description" />

											<input 
												asp-for="userAvatar"
												type="file"
												class="js-file-attach avatar-uploader-input"
												id="avatarUploader"
												data-hs-file-attach-options='{
												"textTarget": "#avatarImg",
												"mode": "image",
												"targetAttr": "src",
												"resetTarget": ".js-file-attach-reset-img",
												"resetImg": "./admin/img/160x160/img1.jpg",
												"allowTypes": [".png", ".jpeg", ".jpg"]
												}' 
											/>

											<span class="avatar-uploader-trigger">
												<i class="bi-pencil avatar-uploader-icon shadow-sm"></i>
											</span>
										</label>
										<!-- End Avatar -->

										<button type="button"
												class="js-file-attach-reset-img btn btn-white">
											Delete
										</button>
									</div>
								</div>
							</div>
							<!-- End Form -->
							<!-- Form -->
							<div class="row mb-4">
								<label for="nameLabel"
									   class="col-sm-3 col-form-label form-label">
									Name
									<i class="bi-question-circle text-body ms-1"
									   data-bs-toggle="tooltip"
									   data-bs-placement="top"
									   title="Displayed on public forums, such as Front."></i>
								</label>

								<div class="col-sm-9">
									<div class="input-group input-group-sm-vertical">
										<input 
											asp-for="User.Name"
											type="text"
											class="form-control"
											id="nameLabel"
											placeholder="Clarice"
											aria-label="Clarice" 
										/>
									</div>
								</div>
							</div>
							<!-- End Form -->

							<!-- Form -->
							<div class="row mb-4">
								<label for="emailLabel"
									   class="col-sm-3 col-form-label form-label">Email</label>

								<div class="col-sm-9">
									<input 
										asp-for="User.Email"
										type="email"
										class="form-control"
										id="emailLabel"
										placeholder="Email"
										aria-label="Email" 
									/>
								</div>
							</div>
							<!-- End Form -->
							<!-- Form -->
							<div class="row mb-4">
								<label for="passwordLabel"
									   class="col-sm-3 col-form-label form-label">Password</label>

								<div class="col-sm-9">
									<div class="input-group input-group-merge">
									  <input 
										  asp-for="User.Password"
										  type="password" class="js-toggle-password form-control" 
										  id="passwordLabel" placeholder="Enter password"
											 data-hs-toggle-password-options='{
											   "target": ".js-password-toggle-show-target",
											   "show": false,
											   "defaultClass": "bi-eye-slash",
											   "showClass": "bi-eye",
											   "classChangeTarget": ".changePasswordShowIcon"
											 }'>
									  <a class="js-password-toggle-show-target input-group-append input-group-text" href="javascript:;">
										<i class="changePasswordShowIcon"></i>
									  </a>
									</div>
								</div>
							</div>
							<!-- End Form -->
							<!-- Form -->
							<div class="row mb-4">
								<label for="repasswordLabel"
									   class="col-sm-3 col-form-label form-label">Re-Password</label>

								<div class="col-sm-9">
									<div class="input-group input-group-merge">
									  <input 
										  asp-for="rePassword"
										  type="password" class="js-toggle-password form-control" 
										  id="repasswordLabel" placeholder="Enter repassword"
										  data-hs-toggle-password-options='{
											   "target": ".js-password-toggle-show-target",
											   "show": false,
											   "defaultClass": "bi-eye-slash",
											   "showClass": "bi-eye",
											   "classChangeTarget": ".changePasswordShowIcon"
											 }'>
									  <a class="js-password-toggle-show-target input-group-append input-group-text" href="javascript:;">
										<i class="changePasswordShowIcon"></i>
									  </a>
									</div>
								</div>
							</div>
							<!-- End Form -->


							<!-- Form -->
							<div class="js-add-field row mb-4"
								 data-hs-add-field-options='{
                          "template": "#addPhoneFieldTemplate",
                          "container": "#addPhoneFieldContainer",
                          "defaultCreated": 0
                        }'>
								<label for="phoneLabel"
									   class="col-sm-3 col-form-label form-label">
									Phone
								</label>

								<div class="col-sm-9">
									<div class="input-group input-group-sm-vertical">
										<input 
											asp-for="User.Phone"
											type="text"
											class="js-input-mask form-control"
											id="phoneLabel"
											placeholder="+x(xxx)xxx-xx-xx"
											aria-label="+x(xxx)xxx-xx-xx"
											data-hs-mask-options='{"mask": "0000 000 000"}' 
										/>
									</div>

									<!-- Container For Input Field -->
									<div id="addPhoneFieldContainer"></div>
								</div>
							</div>
							<!-- End Form -->
							<!-- Form Select -->
							<div class="row mb-4">
								<label for="changeUserLevel"
									   class="col-sm-3 col-form-label form-label">
									Level
								</label>
								<div class="col-sm-9">
									<div class="tom-select-custom">
										  <select 
											  asp-for="User.Level"
											  id="levelLabel"
											  class="js-select form-select" autocomplete="off" value = "0"
												data-hs-tom-select-options='{"placeholder": "Select a level...","hideSearch": true}'>
											@foreach (var level in levels.ToDictionary())
											{
												<option value="@level.Value">@level.Key</option>
											}
										  </select>
									</div>
								</div>
							</div>	
							<!-- End Form Select -->
							
							
						</div>
						<!-- End Body -->
						<!-- Footer -->
						<div class="card-footer d-flex justify-content-end align-items-center">
							<button type="button"
									class="btn btn-primary"
									data-hs-step-form-next-options='{
                            "targetSelector": "#addUserStepBillingAddress"
                          }'>
								Next
								<i class="bi-chevron-right"></i>
							</button>
						</div>
						<!-- End Footer -->
					</div>
					<!-- End Card -->

					<div id="addUserStepBillingAddress"
						 class="card card-lg"
						 style="display: none">
						<!-- Body -->
						<div class="card-body">
							<!-- Form -->
							<div class="row mb-4">
								<label for="addressPhone"
									   class="col-sm-3 col-form-label form-label">
									   Phone
									<i class="bi-question-circle text-body ms-1"
									   data-bs-toggle="tooltip"
									   data-bs-placement="top"
									   title="Phone number for us to call when shipping to you"></i>
								</label>

								<div class="col-sm-9">
									<input 
										asp-for="UserAdress.Phone"
										type="text"
										class="form-control"
										id="addressPhone"
										placeholder="Your Phone"
										aria-label="Your Phone" 
										/>
								</div>
							</div>
							<!-- End Form -->
							<!-- Form -->
							<div class="row mb-4">
								<label for="addressCountry"
									   class="col-sm-3 col-form-label form-label">Country</label>

								<div class="col-sm-9">
									<input 
										asp-for="UserAdress.Country"
										type="text"
										   class="form-control"
										   id="addressCountry"
										   placeholder="Your Country"
										   aria-label="Your Country" />
								</div>
							</div>
							<!-- End Form -->
							<!-- Form -->
							<div class="row mb-4">
								<label for="addressCompany"
									   class="col-sm-3 col-form-label form-label">Company</label>

								<div class="col-sm-9">
									<input 
										asp-for="UserAdress.Company"
										type="text"
										   class="form-control"
										   id="addressCompany"
										   placeholder="Your Company"
										   aria-label="Your Company" />
								</div>
							</div>
							<!-- End Form -->
							<!-- Form -->
							<div class="row mb-4">
								<label for="addressCity"
									   class="col-sm-3 col-form-label form-label">City</label>

								<div class="col-sm-9">
									<input 
										asp-for="UserAdress.City"
										type="text"
										   class="form-control"
										   id="addressCity"
										   placeholder="Your City"
										   aria-label="Your City" />
								</div>
							</div>
							<!-- End Form -->
							<!-- Form -->
							<div class="row mb-4">
								<label for="StreetAddress"
									   class="col-sm-3 col-form-label form-label">
									StreetAddress
								</label>

								<div class="col-sm-9">
									<input 
										asp-for="UserAdress.StreetAddress"
										type="text"
										   class="form-control"
										   id="StreetAddress"
										   placeholder="Your Street Address"
										   aria-label="Your Street Address"
									/>
								</div>
							</div>
							<!-- End Form -->
							<!-- Form -->
							<div class="row">
								<label for="PostalCode"
									   class="col-sm-3 col-form-label form-label">
									Zip code
									<i class="bi-question-circle text-body ms-1"
									   data-bs-toggle="tooltip"
									   data-bs-placement="top"
									   title="You can find your code in a postal address."></i>
								</label>

								<div class="col-sm-9">
									<input 
										asp-for="UserAdress.PostalCode"
										type="text"
										   class="js-input-mask form-control"
										   id="PostalCode"
										   placeholder="Your zip code"
										   aria-label="Your zip code"
										   data-hs-mask-options='{"mask": "000000"}' />
								</div>
							</div>
							<!-- End Form -->


							
						</div>
						<!-- End Body -->
						<!-- Footer -->
						<div class="card-footer d-flex align-items-center">
							<button type="button"
									class="btn btn-ghost-secondary"
									data-hs-step-form-prev-options='{
                       "targetSelector": "#addUserStepProfile"
                     }'>
								<i class="bi-chevron-left"></i>
								Previous step
							</button>

							<div class="ms-auto">
								<button type="button"
										class="btn btn-primary"
										data-hs-step-form-next-options='{
                              "targetSelector": "#addUserStepConfirmation"
                            }'>
									Next
									<i class="bi-chevron-right"></i>
								</button>
							</div>
						</div>
						<!-- End Footer -->
					</div>

					<div id="addUserStepConfirmation"
						 class="card card-lg"
						 style="display: none">
						<!-- Profile Cover -->
						<div class="profile-cover">
							<div class="profile-cover-img-wrapper">
								<img class="profile-cover-img"
									 src="admin/img/1920x400/img1.jpg"
									 alt="Image Description" />
							</div>
						</div>
						<!-- End Profile Cover -->
						<!-- Avatar -->
						<div class="avatar avatar-xxl avatar-circle avatar-border-lg profile-cover-avatar">
							<img 
								id="avatarReview"
								class="avatar-img"
								 src="front/images/users/default-user.png"
								 alt="Image Description" />
						</div>
						<!-- End Avatar -->
						<!-- Body -->
						<div class="card-body">
							<dl class="row">
								<dt class="col-sm-6 text-sm-end">
									Name:
								</dt>
								<dd class="col-sm-6" id="nameLabelReview"> _ </dd>

								<dt class="col-sm-6 text-sm-end">
									Email:
								</dt>
								<dd  id="emailLabelReview" class="col-sm-6">
									_
								</dd>

								<dt class="col-sm-6 text-sm-end">
									Phone:
								</dt>
								<dd id="phoneLabelReview" class="col-sm-6">
									_
								</dd>
								<dt class="col-sm-6 text-sm-end">
									Level:
								</dt>
								<dd id="levelLabelReview" class="col-sm-6">
									_
								</dd>
							</dl>
							<!-- End Row -->
						</div>
						<!-- End Body -->
						<!-- Footer -->
						<div class="card-footer d-sm-flex align-items-sm-center">
							<button type="button"
									class="btn btn-ghost-secondary mb-2 mb-sm-0"
									data-hs-step-form-prev-options='{
                       "targetSelector": "#addUserStepBillingAddress"
                     }'>
								<i class="bi-chevron-left"></i>
								Previous step
							</button>

							<div class="ms-auto">
								<button type="submit" class="btn btn-primary">
									Add user
								</button>
							</div>
						</div>
						<!-- End Footer -->
					</div>
				</div>
				<!-- End Content Step Form -->
			</div>
		</div>
		<!-- End Row -->
	</form>
	<!-- End Step Form -->
</div>

<script>
	let boxCreateUser = document.querySelector("#create-user")
	let inputFile = document.querySelector("#avatarUploader")
	let avatarImg = document.querySelector("#avatarImg")
	let avatarReview = document.querySelector("#avatarReview")
	let resetImag = document.querySelector(".js-file-attach-reset-img")
	if(boxCreateUser){
		inputFile.addEventListener("change",e=>{
			let file = e.target.files[0]
			let reader = new FileReader();

			reader.addEventListener("load", () => {
				avatarReview.src = reader.result
			}, false);

			reader.readAsDataURL(file)
		})
		resetImag.addEventListener("click",()=>{
			avatarReview.src = "front/images/users/default-user.png"
		})
		nameLabel.addEventListener("change",()=>{
			nameLabelReview.textContent = nameLabel.value
		})
		emailLabel.addEventListener("change", () => {
			emailLabelReview.textContent = emailLabel.value
		})
		phoneLabel.addEventListener("change", () => {
			phoneLabelReview.textContent = phoneLabel.value
		})

		function changLevelReview(number){
			text = levelLabel.querySelector(`option[value="${number}"]`)
			levelLabelReview.textContent = text.textContent
		}
		changLevelReview(levelLabel.value)
		levelLabel.addEventListener("change", () => {
			changLevelReview(levelLabel.value)
		})
	}
</script>