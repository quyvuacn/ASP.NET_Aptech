@model ShopASP.Models.Product
@{
	string path = "product_default.png";
	if (Model.ProductImages.Count()>0)
	{
		path = Model.ProductImages.First().Path;
	}
}
<tr>
	<td class="table-column-pe-0">
		<div class="form-check">
			<input type="checkbox"
				   class="form-check-input"
				   id="usersDataCheck1" />
			<label class="form-check-label"
				   for="usersDataCheck1"></label>
		</div>
	</td>
	<td class="table-column-ps-0">
		<a asp-action="Edit" asp-route-id="@Model.Id" class="d-flex align-items-center" >
			<div class="flex-shrink-0">
				<img class="avatar avatar-lg" src='~/front/images/products/@path' alt="Image Description">
			</div>
			<div class="flex-grow-1 ms-3">
				<h5 class="text-inherit mb-0">
					@Model.Name
				</h5>
			</div>
		</a>
	</td>
	<td>@Model.Brand.Name</td>
	<td>
		@Model.Category.Name
	</td>
	<td>$@Model.Price</td>
	<td>
		@Model.Weight kg
	</td>
	<td>@Model.Sku</td>
	<td>
		<form asp-action="Delete" method="post">
			<a asp-action="Edit" asp-route-id="@Model.Id"
			   class="btn btn-sm btn-white text-primary">
				<i class="bi-pencil-fill me-1"></i>
				Edit
			</a>
			<input type="hidden" asp-for="Id" />
			<button type="button"
					onclick="confirm('Confirm this action?') == true ? this.form.submit() : ''"
					class="btn btn-sm btn-white text-danger">
				<i class="bi-pencil-fill me-1"></i>
				Delete
			</button>
		</form>

	</td>
</tr>